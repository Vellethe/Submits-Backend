@using TrainingProject.Pages.Shared.Components.LoginMenu;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <a id="logoA" asp-page="/index"><div id="logoDiv"><img id="logo" src="/Pictures/Logo.png" /></div></a>

        <input type="checkbox" id="menuToggle" />
        <label id="menuToggleLabel" for="menuToggle">&#9776;</label>

        <ul id="pageList">
            <li><a asp-page="/MyPage/Index">Profile</a></li>
            <li><a asp-page="/About/Index">About</a></li>
            <li><a asp-page="/Workout/Index">Workouts</a></li>
            <li><a asp-page="/index">Home</a></li>
        </ul>

    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>